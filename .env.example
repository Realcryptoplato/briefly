# Briefly 3000 Environment Configuration

# X API Credentials (@briefly3000)
X_USERNAME=briefly3000
X_API_KEY=your_api_key
X_API_KEY_SECRET=your_api_key_secret
X_BEARER_TOKEN=your_bearer_token
X_ACCESS_TOKEN=your_access_token
X_ACCESS_TOKEN_SECRET=your_access_token_secret

# AI Inference (Grok via xAI)
XAI_API_KEY=xai-your_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-4-1-fast

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-...

# Database
DATABASE_URL=postgresql://briefly:briefly3000@localhost:5436/briefly
POSTGRES_USER=briefly
POSTGRES_PASSWORD=briefly3000
POSTGRES_DB=briefly

# Redis (for Celery)
REDIS_URL=redis://localhost:6382/0

# n8n Integration
N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_PATH=/webhook/briefing
# N8N_API_KEY=optional-api-key

# App Settings
APP_ENV=development
DEBUG=true
SECRET_KEY=generate-a-secure-key-for-production

